{
  "extends": [
    "config:base",
    "github>openalcoholics/renovate-config:pub",
    "github>openalcoholics/renovate-config:java"
  ],
  "prHourlyLimit": 0,
  "automergeStrategy": "rebase",
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": [
      "at 17:00 on friday"
    ]
  },
  "packageRules": [
    {
      "matchManagers": [
        "poetry",
        "pub"
      ],
      "prConcurrentLimit": 1
    },
    {
      "matchManagers": [
        "poetry",
        "pub"
      ],
      "matchUpdateTypes": [
        "patch"
      ],
      "separateMinorPatch": true,
      "automerge": true
    },
    {
      "groupName": "requests",
      "matchPackageNames": [
        "requests",
        "types-requests"
      ],
      "automerge": true
    },
    {
      "groupName": "pillow",
      "matchPackageNames": [
        "Pillow",
        "types-Pillow"
      ]
    },
    {
      "matchPackageNames": [
        "sentry-sdk"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true
    }
  ]
}
