{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "github>openalcoholics/renovate-config:pub",
    "github>openalcoholics/renovate-config:java"
  ],
  "rangeStrategy": "replace",
  "prHourlyLimit": 0,
  "automergeStrategy": "rebase",
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": [
      "after 17:00 on friday"
    ],
    "automerge": true
  },
  "packageRules": [
    {
      "matchManagers": [
        "poetry",
        "pub"
      ],
      "prConcurrentLimit": 1
    },
    {
      "matchManagers": [
        "poetry",
        "pub"
      ],
      "matchUpdateTypes": [
        "patch"
      ],
      "separateMinorPatch": true,
      "automerge": true
    },
    {
      "matchManagers": [
        "poetry"
      ],
      "matchDepTypes": [
        "dev-dependencies",
        "dev_dependencies",
        "dev"
      ],
      "automerge": true
    },
    {
      "groupName": "requests",
      "matchPackageNames": [
        "requests",
        "types-requests"
      ],
      "automerge": true
    },
    {
      "groupName": "pillow",
      "matchPackageNames": [
        "Pillow",
        "types-Pillow"
      ]
    },
    {
      "matchPackageNames": [
        "sentry-sdk"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true
    },
    {
      "matchPackageNames": [
        "certifi"
      ],
      "automerge": true
    },
    {
      "description": "Only allow LTS Java versions (next will be 21)",
      "matchPackageNames": [
        "eclipse-temurin"
      ],
      "matchDatasources": [
        "docker"
      ],
      "matchCurrentVersion": "17",
      "enabled": false
    },
    {
      "description": "Only allow stable Java versions",
      "matchPackageNames": [
        "eclipse-temurin"
      ],
      "matchDatasources": [
        "docker"
      ],
      "allowedVersions": "<=19"
    },
    {
      "groupName": "Terraform Patch",
      "description": "Group and automerge terraform asdf and terraform-internal patch updates",
      "matchPackageNames": [
        "hashicorp/terraform",
        "terraform"
      ],
      "matchManagers": [
        "asdf",
        "github-actions",
        "terraform"
      ],
      "matchUpdateTypes": "patch",
      "automerge": true
    },
    {
      "groupName": "Terraform",
      "description": "Group terraform asdf and terraform-internal updates",
      "matchPackageNames": [
        "hashicorp/terraform",
        "terraform"
      ],
      "matchManagers": [
        "asdf",
        "github-actions",
        "terraform"
      ]
    }
  ],
  "regexManagers": [
    {
      "datasourceTemplate": "pypi",
      "fileMatch": [
        "^\\.github/workflows/.+\\.ya?ml$",
        "Dockerfile"
      ],
      "matchStrings": [
        "pipx? install (?<depName>[_\\-a-zA-Z]+)==(?<currentValue>\\d+\\.\\d+\\.\\d+)"
      ]
    }
  ]
}
