{
  "extends": [
    "config:base",
    "github>openalcoholics/renovate-config:pub",
    "github>openalcoholics/renovate-config:java"
  ],
  "prHourlyLimit": 0,
  "automergeStrategy": "rebase",
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": [
      "at 17:00 on friday"
    ]
  },
  "packageRules": [
    {
      "matchManagers": [
        "poetry",
        "pub"
      ],
      "prConcurrentLimit": 1
    },
    {
      "matchManagers": [
        "poetry",
        "pub"
      ],
      "matchUpdateTypes": [
        "patch"
      ],
      "separateMinorPatch": true,
      "automerge": true
    },
    {
      "groupName": "requests",
      "matchPackageNames": [
        "requests",
        "types-requests"
      ],
      "automerge": true
    },
    {
      "groupName": "pillow",
      "matchPackageNames": [
        "Pillow",
        "types-Pillow"
      ]
    },
    {
      "matchPackageNames": [
        "sentry-sdk"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true
    },
    {
      "description": "Only allow LTS Java versions (next will be 21)",
      "matchPackageNames": [
        "openjdk"
      ],
      "matchManagers": [
        "Dockerfile"
      ],
      "matchCurrentVersion": "/(11|17)/",
      "allowedVersions": "/(11|17)/"
    },
    {
      "description": "Only allow stable Java versions",
      "matchPackageNames": [
        "openjdk"
      ],
      "matchManagers": [
        "Dockerfile"
      ],
      "allowedVersions": "<=19"
    }
  ],
  "regexManagers": [
    {
      "datasourceTemplate": "pypi",
      "fileMatch": [
        "^\\.github/workflows/.+\\.ya?ml$",
        "Dockerfile"
      ],
      "matchStrings": [
        "pip install (?<depName>[_\\-a-zA-Z]+)==(?<currentValue>\\d+\\.\\d+\\.\\d+)"
      ]
    }
  ]
}
