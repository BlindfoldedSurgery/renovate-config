{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "groupName": "requests",
      "matchCategories": [
        "python"
      ],
      "matchDepNames": [
        "requests",
        "types-requests"
      ],
      "automerge": true
    },
    {
      "groupName": "Pillow",
      "matchCategories": [
        "python"
      ],
      "matchDepNames": [
        "Pillow",
        "types-Pillow"
      ]
    },
    {
      "matchCategories": [
        "python"
      ],
      "matchDepNames": [
        "sentry-sdk"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true
    },
    {
      "matchCategories": [
        "python"
      ],
      "matchDepNames": [
        "certifi",
        "poetry"
      ],
      "automerge": true
    }
  ],
  "regexManagers": [
    {
      "fileMatch": [
        "^.github/workflows/.+\\.ya?ml$"
      ],
      "datasourceTemplate": "pypi",
      "depNameTemplate": "poetry",
      "matchStrings": [
        "renovate: poetry\\s+version: (?<currentValue>.+)\\s"
      ]
    }
  ]
}
