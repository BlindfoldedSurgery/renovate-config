{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "groupName": "requests",
      "matchCategories": [
        "python"
      ],
      "matchDepNames": [
        "requests",
        "types-requests"
      ],
      "automerge": true
    },
    {
      "groupName": "Pillow",
      "matchCategories": [
        "python"
      ],
      "matchDepNames": [
        "Pillow",
        "types-Pillow"
      ]
    },
    {
      "matchCategories": [
        "python"
      ],
      "matchDepNames": [
        "sentry-sdk"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true
    },
    {
      "matchCategories": [
        "python"
      ],
      "matchDepNames": [
        "certifi",
        "poetry"
      ],
      "automerge": true
    },
    {
      "matchCategories": [
        "python"
      ],
      "matchPackagePrefixes": [
        "opentelemetry-"
      ],
      "groupName": "OpenTelemetry"
    },
    {
      "matchCategories": [
        "python"
      ],
      "matchUpdateTypes": [
        "minor"
      ],
      "description": "python-telegram-bot uses httpx as well sets tight version constraints.",
      "matchDepNames": [
        "python-telegram-bot",
        "httpx"
      ],
      "groupName": "httpx and python-telegram-bot"
    },
    {
      "matchCategories": [
        "python"
      ],
      "matchDepNames": [
        "python-telegram-bot-raw"
      ],
      "replacementName": "python-telegram-bot"
    }
  ]
}
