{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "local>BlindfoldedSurgery/renovate-config"
  ],
  "separateMajorMinor": true,
  "separateMultipleMajor": true,
  "packageRules": [
    {
      "matchDepNames": [
        "renovate"
      ],
      "matchUpdateTypes": [
        "major",
        "minor"
      ],
      "schedule": [
        "on friday"
      ]
    },
    {
      "matchDepNames": [
        "renovate"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true
    }
  ]
}
