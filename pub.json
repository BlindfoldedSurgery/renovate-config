{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "groupName": "BLoC",
      "matchCategories": [
        "dart"
      ],
      "matchPackageNames": [
        "bloc",
        "flutter_bloc",
        "bloc_test"
      ]
    },
    {
      "groupName": "JSON serialization",
      "matchCategories": [
        "dart"
      ],
      "matchPackageNames": [
        "json_serializable",
        "json_annotation"
      ]
    },
    {
      "groupName": "injectable",
      "matchCategories": [
        "dart"
      ],
      "matchPackageNames": [
        "injectable",
        "injectable_generator"
      ]
    },
    {
      "groupName": "sqflite",
      "matchCategories": [
        "dart"
      ],
      "matchPackageNames": [
        "sqflite",
        "sqflite_common",
        "sqflite_common_ffi"
      ]
    }
  ]
}
