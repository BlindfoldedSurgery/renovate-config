{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "groupName": "BLoC",
      "matchCategories": [
        "dart"
      ],
      "matchDepNames": [
        "bloc",
        "flutter_bloc",
        "bloc_test"
      ]
    },
    {
      "groupName": "JSON serialization",
      "matchCategories": [
        "dart"
      ],
      "matchDepNames": [
        "json_serializable",
        "json_annotation"
      ]
    },
    {
      "groupName": "injectable",
      "matchCategories": [
        "dart"
      ],
      "matchDepNames": [
        "injectable",
        "injectable_generator"
      ]
    },
    {
      "groupName": "sqflite",
      "matchCategories": [
        "dart"
      ],
      "matchDepNames": [
        "sqflite",
        "sqflite_common",
        "sqflite_common_ffi"
      ]
    },
    {
      "groupName": "Dart",
      "matchManagers": [
        "dockerfile",
        "asdf",
        "mise"
      ],
      "matchDepNames": [
        "dart"
      ],
      "separateMinorPatch": true
    },
    {
      "matchManagers": [
        "dockerfile",
        "asdf",
        "mise"
      ],
      "matchDepNames": [
        "dart"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true
    },
    {
      "matchManagers": [
        "asdf",
        "mise"
      ],
      "matchDepNames": [
        "dart"
      ],
      "allowedVersions": "!/\\d\\d\\d\\d\\d/"
    }
  ]
}
