{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "matchManagers": [
        "gradle",
        "maven"
      ],
      "matchPackageNames": [
        "com.diffplug.spotless",
        "io.sentry:sentry"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch",
        "lockFileMaintenance"
      ],
      "automerge": true
    },
    {
      "matchManagers": [
        "gradle-wrapper"
      ],
      "matchPackageNames": [
        "gradle"
      ],
      "matchUpdateTypes": [
        "patch"
      ],
      "automerge": true
    }
  ]
}
