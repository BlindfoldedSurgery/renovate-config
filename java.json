{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "ignorePresets": [
    "workarounds:javaLTSVersions"
  ],
  "packageRules": [
    {
      "matchCategories": [
        "java"
      ],
      "matchDepNames": [
        "io.sentry:sentry"
      ],
      "matchUpdateTypes": [
        "minor"
      ],
      "automerge": true
    },
    {
      "description": "Automerge test dependencies (Renovate doesn't classify them as such)",
      "matchCategories": [
        "java"
      ],
      "matchDepNames": [
        "com.diffplug.spotless",
        "io.gitlab.arturbosch.detekt"
      ],
      "automerge": true
    },
    {
      "matchManagers": [
        "gradle-wrapper"
      ],
      "matchDepNames": [
        "gradle"
      ],
      "matchUpdateTypes": [
        "patch"
      ],
      "automerge": true
    },
    {
      "description": "Only allow LTS Java versions (next will be 21)",
      "matchDepNames": [
        "eclipse-temurin"
      ],
      "matchDatasources": [
        "docker"
      ],
      "matchCurrentVersion": "17",
      "enabled": false
    },
    {
      "description": "Only allow stable Java versions",
      "matchDepNames": [
        "eclipse-temurin"
      ],
      "matchDatasources": [
        "docker"
      ],
      "allowedVersions": "<=20"
    }
  ]
}
