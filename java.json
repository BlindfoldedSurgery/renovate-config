{
  "packageRules": [
    {
      "matchManagers": [
        "gradle",
        "maven"
      ],
      "matchPackageNames": [
        "com.diffplug.spotless"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch",
        "lockFileMaintenance"
      ],
      "automerge": true
    },
    {
      "matchManagers": [
        "gradle"
      ],
      "matchPackageNames": [
        "gradle"
      ],
      "matchUpdateTypes": [
        "patch"
      ],
      "automerge": true
    },
    {
      "description": "Automerge all Spotless updates (if the pipeline succeeds, they'll be fine)",
      "matchManagers": [
        "gradle"
      ],
      "matchPackageNames": [
        "spotless"
      ],
      "automerge": true
    },
  ]
}
