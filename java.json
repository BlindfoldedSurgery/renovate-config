{
  "packageRules": [
    {
      "matchManagers": [
        "gradle",
        "maven"
      ],
      "matchPackageNames": [
        "com.diffplug.spotless",
        "io.sentry:sentry"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch",
        "lockFileMaintenance"
      ],
      "automerge": true
    },
    {
      "matchManagers": [
        "gradle"
      ],
      "matchPackageNames": [
        "gradle"
      ],
      "matchUpdateTypes": [
        "patch"
      ],
      "automerge": true
    },
    {
      "matchManagers": [
        "poetry"
      ],
      "matchDepTypes": [
        "dev-dependencies"
      ],
      "automerge": true
    }
  ]
}
