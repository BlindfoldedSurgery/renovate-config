{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "matchCategories": [
        "java"
      ],
      "matchDepNames": [
        "io.sentry:sentry"
      ],
      "matchUpdateTypes": [
        "minor"
      ],
      "automerge": true
    },
    {
      "description": "Automerge test dependencies (Renovate doesn't classify them as such)",
      "matchCategories": [
        "java"
      ],
      "matchDepNames": [
        "com.diffplug.spotless",
        "io.gitlab.arturbosch.detekt"
      ],
      "automerge": true
    },
    {
      "matchManagers": [
        "gradle-wrapper"
      ],
      "matchDepNames": [
        "gradle"
      ],
      "matchUpdateTypes": [
        "patch"
      ],
      "automerge": true
    }
  ]
}
